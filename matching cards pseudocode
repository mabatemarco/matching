arrange cards in a grid of some size


var cardturnedover=false;
var clickedcard;
n=# of pairs


on click(matchingfunction)

function matching{

	display card;

	if (cardturnedover=true){
			
		if(this card=clicked card){
			some animation;
			both cards disappear
			n--
			if(n=0){
				winfunction
			}
		}
		else{
			pause for 2 sec
			turn both cards back over
		}
		cardturnedover=false
	}

	else{
		cardturnedover=true
		clickedcard=this card
	}
}

function win{
	tremendous celebration
}